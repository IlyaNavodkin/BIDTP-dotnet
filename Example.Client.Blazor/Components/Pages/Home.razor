@page "/"



<PageTitle>Home</PageTitle>


<button class="btn btn-primary" @onclick="CreateRandomWall">
    Создать рандомную стенку
</button>

@code{
    private BidtpClient bidtpClient;

    protected override async Task OnInitializedAsync()
    {
        bidtpClient = new BidtpClient();

        bidtpClient.SetPipeName("testpipe");

        await Task.CompletedTask;
    }

    public async Task CreateRandomWall()
    {
        try
        {
            var request = new Request();
            var body = RandomPointGenerateService.GeneratePointsWithMinDistance(0.3, 10);
            request.SetBody(body);
            request.SetRoute("CreateRandomWall");

            var response = await bidtpClient.Send(request);
            var text = response.GetBody<string>();
        }
        catch (Exception ex)
        {
        }
    }

}
